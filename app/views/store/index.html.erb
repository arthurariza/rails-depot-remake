<div class="w-full">
  <%= render 'store/notice' %>

  <h1 class="font-bold text-xl mb-6 pb-2 border-b-2">
    Your Pragmatic Catalog
  </h1>

  <h2 class="text-lg my-4">
    You made <%= pluralize(@counter, 'visit') %> to this page
  </h2>

  <%= turbo_stream_from "products" %>

  <ul>
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <%= render 'store/product', product: product %>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
